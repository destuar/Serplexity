# Backend environment example (no secrets)
NODE_ENV=development
PORT=8001

# Secrets provider (prefer AWS Secrets Manager)
SECRETS_PROVIDER=aws
DATABASE_SECRET_NAME=
READ_REPLICA_SECRET_NAME=
SMTP_SECRET_NAME=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USE_TLS=false

# BullMQ
BULLMQ_QUEUE_PREFIX=serplexity-queue

# Auth
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me
JWT_EXPIRES_IN=15m

# Google OAuth (Login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:8001/api/auth/google/callback

# Google Analytics 4 OAuth
GA4_GOOGLE_CLIENT_ID=
GA4_GOOGLE_CLIENT_SECRET=
GA4_GOOGLE_CALLBACK_URL=

# Google Search Console OAuth
GSC_GOOGLE_CLIENT_ID=
GSC_GOOGLE_CLIENT_SECRET=
GSC_GOOGLE_CALLBACK_URL=

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_MONTHLY_PRICE_ID=
STRIPE_ANNUAL_PRICE_ID=

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=
GLACIER_VAULT_NAME=
GLACIER_ACCOUNT_ID=
AWS_KMS_KEY_ID=

# LLM Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
PERPLEXITY_API_KEY=

# External SERP providers
SERP_API_KEY=

# Email & Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
ALERT_WEBHOOK_URL=
ADMIN_EMAIL=

# Operational toggles
AUTO_REMEDIATE_DEPENDENCIES=false
DEPENDENCY_CHECK_ENABLED=true
FAIL_FAST_ON_DEPENDENCIES=false

# Optional extras
GOOGLE_PAGESPEED_API_KEY=
